{
  "name": "namaz-time",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "electron": "electron .",
    "dev": "concurrently \"npm run start\" \"nodemon --watch main.js --exec 'electron .'\"",
    "build": "electron-builder --mac --arm64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "@babel/preset-react": "^7.24.7",
    "babel-loader": "^9.2.1",
    "concurrently": "^9.0.1",
    "electron": "^32.1.0",
    "electron-builder": "^24.7.0",
    "html-webpack-plugin": "^5.6.0",
    "nodemon": "^3.0.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-store": "^10.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "build": {
    "appId": "com.example.namaztime",
    "productName": "Namoz Vaqti",
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "./public/icon.png"
    },
    "asar": true,
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "main.js"
    ],
    "extraResources": [
      {
        "from": "src/index.js",
        "to": "main.js"
      }
    ]
  }
